# MongoDB Atlas Connection String
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/sleep_diary?retryWrites=true&w=majority

# JWT Secret (generate a random 256-bit string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Expiry Times
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Environment
NODE_ENV=development

# CORS Origin (for production, set to your Netlify domain)
CORS_ORIGIN=http://localhost:8888

# Vite API URL (for frontend)
VITE_API_URL=http://localhost:8888/.netlify/functions
